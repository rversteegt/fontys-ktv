{% extends "index.twig" %}

{% block title %}
    Team
{% endblock %}


{% block content %}
    <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12 text-center">
                    <h2 class="brand-before">
                        <small>Team</small>
                    </h2>
                    <h1 class="brand-name">De CodeKrakers</h1>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                        <strong>Leden</strong>
                    </h2>
                    <hr>
                    <p>
                        Hier komt een lijst van alle leden van team {{id}}
                    </p>
                    <ul>
                        <li>Henk Driessen</li>
                        <li>Jan de Boer</li>
                        <li>Frits Wesselink</li>
                        <li>Kees de Vries</li>
                        <li>Iemand Anders</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                        <strong>Statistieken</strong>
                    </h2>
                    <hr>
                    <p>Hier komen wat statistieken.</p>
                    <p>Aantal gespeelde rondes</p>
                    <p>Behaalde punten per ronde</p>
                    <p>Totale punten</p>
                    <p>Zoiets?</p>
                </div>
            </div>
        </div>

    </div>
{% endblock %}