{% extends "index.twig" %}

{% block title %}
    Team
{% endblock %}


{% block content %}
    <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12 text-center">
                    <h2 class="brand-before">
                        <small>Team</small>
                    </h2>
                    <h1 class="brand-name">{{team.teamname}}</h1>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                        <strong>Leden</strong>
                    </h2>
                    <hr>
                    {% if team.members is empty%}
                        <p>Er zijn nog geen leden in dit team.</p>
                    {% else %}
                        <table class="table table-centered" align="center" style="width:30%;">
                            <thead>
                                <tr>
                                    <th>Naam</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for member in team.members %}
                                    <tr><td>{{member.membername}}</td></tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                        <strong>Totaalscore</strong>
                    </h2>
                    <hr>
                    <h1 class="text-center">{{team.totalscore}}</h1>
                </div>
            </div>
        </div>

    </div>
{% endblock %}