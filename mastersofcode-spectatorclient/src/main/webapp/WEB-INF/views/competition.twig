{% extends "index.twig" %}

{% block title %}
    Wedstrijd
{% endblock %}


{% block content %}
    <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12 text-center">
                    <h2 class="brand-before">
                        <small>Wedstrijd</small>
                    </h2>
                    <h1 class="brand-name">{{competition.title}}</h1>
                    <hr class="tagline-divider">
                    <h2>
                        <small>
                            <strong>TODO 00:47:33</strong>
                        </small>
                    </h2>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                        <strong>Rondes</strong>
                    </h2>
                    <hr>
                    {% if competition.rounds is empty%}
                        <p> Er zijn nog geen rondes </p>
                    {% else %}
                        <table class="table-link table-centered" align="center" style="width:70%;">
                            <thead>
                                <tr>
                                    <th style="width:50%;">Opdracht</th>
                                    <th style="width:20%;">Duratie</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for round in competition.rounds %}
                                    <tr>
                                        <td><a href="/spec/round/{{round.id}}">{{round.assignment.artifact}}</a></td>
                                        <td><a href="/spec/round/{{round.id}}">{{round.duration}}</a></td>
                                        <td><a href="/spec/round/{{round.id}}">{{round.multiplier}}</a></td>
                                        <td><a href="/spec/round/{{round.id}}">
                                                {% if round.id == currentRound.id %}
                                                    Bezig..
                                                {% endif %}
                                            </a></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                        <strong>Teams</strong>
                    </h2>
                    <hr>
                    {% if competition.teams is empty%}
                        <p> Er zijn nog geen teams </p>
                    {% else %}
                        <table class="table-link table-centered" align="center" style="width:70%;">
                            <thead>
                                <tr>
                                    <th style="width:40%;">Teamnaam</th>
                                    <th style="width:40%;">Naam teamleider</th>
                                    <th style="width:10%;">Totaalscore</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for team in competition.teams %}
                                    <tr>
                                        <td><a href="/spec/team/{{team.username}}">{{team.teamname}}</a></td>
                                        <td><a href="/spec/team/{{team.username}}">{{team.fullname}}</a></td>
                                        <td><a href="/spec/team/{{team.username}}">{{team.totalscore}}</a></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% endif %}    
                </div>
            </div>
        </div>
    </div>

{% endblock %}