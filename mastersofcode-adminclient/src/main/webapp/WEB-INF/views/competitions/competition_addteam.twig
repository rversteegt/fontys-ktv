{% extends "dashboard/index.twig" %}

{% block title %}
    Team toevoegen
{% endblock %}


{% block heading %}
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1>{{competition.title}}</h1>
                <h4>{{competition.description}}</h4>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">

            <div class="page-header">
                <h3>
                    Team toevoegen
                </h3>
            </div>

            <div class="container">
                <p class="error">            
                </p>
                {% if teams is empty%}
                    <p> Er zijn geen teams om toe te voegen </p>                    
                {% else %}
                    <form method="POST" action="/mok/competitions/{{competition.id}}/addteam">
                        <table class="table"  style="width:50%;">
                            <thead>
                            <th style="width:10%;"></th>
                            <th style="width:45%;">Teamnaam</th>
                            <th style="width:45%;">Teamleider</th>
                            </thead>

                            <tbody>

                                {% for team in teams %}

                                    <tr>
                                        <td><input type="radio" name="round" value="{{team.username}}"></td>
                                        <td>{{team.teamname}}</td>
                                        <td>{{team.fullname}}</td>
                                    </tr>

                                {% endfor %}
                            </tbody>
                        </table>
                            
                        <button type="submit" class="btn btn-default">Toevoegen</button>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
