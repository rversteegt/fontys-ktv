{% extends "index.twig" %}

{% block title %}
    Competition
{% endblock %}


{% block heading %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Competition
            </h1>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-4">
            <form method="POST" action="/mok/competitions/new">    
                <h3>
                    Wedstrijd informatie
                </h3>
                <div class="form-group">
                    <label>Titel</label>
                    <input name="titel" class="form-control" required autofocus>
                </div>
                <div class="form-group">
                    <label>Omschrijving</label>
                    <input name="omschrijving" class="form-control" required autofocus>
                </div>   
                <button type="submit" class="btn btn-default">Aanmaken</button>
            </form>  
        </div>
    </div>
{% endblock %}
