{% extends "dashboard/index.twig" %}

{% block title %}
    Ronde toevoegen
{% endblock %}


{% block heading %}
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1>{{competition.title}}</h1>
                <h4>{{competition.description}}</h4>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">

            <div class="page-header">
                <h3>
                    Ronde toevoegen
                </h3>
            </div>

            <div class="container">
                <p class="error">            
                </p>
                {% if rounds is empty%}
                    <p> Er zijn geen rondes om toe te voegen </p>                    
                {% else %}
                    <form method="POST" action="/mok/competitions/{{competition.id}}/addround">
                        <table class="table"  style="width:50%;">
                            <thead>
                            <th style="width:10%;"></th>
                            <th style="width:60%;">Opdracht</th>
                            <th style="width:10%;">Moeilijkheidsgraad</th>
                            <th style="width:20%;">Duratie</th>
                            </thead>

                            <tbody>

                                {% for round in rounds %}

                                    <tr>
                                        <td><input type="radio" name="round" value="{{round.id}}"></td>
                                        <td>{{round.assignment.name}}</td>
                                        <td>{{round.multiplier}}</td>
                                        <td>{{round.duration}}</td>
                                    </tr>

                                {% endfor %}
                            </tbody>
                        </table>
                            
                        <button type="submit" class="btn btn-default">Toevoegen</button>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
