{% extends "dashboard/index.twig" %}

{% block title %}
    Wedstrijd
{% endblock %}


{% block heading %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Wedstrijd
            </h1>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-4">
            <form method="POST">    
                <h3>
                    Wedstrijd informatie
                </h3>
                <div class="form-group">
                    <label>Titel</label>
                    <input name="title" class="form-control" 
                           value="{{competition.title}}" required autofocus>
                </div>
                <div class="form-group">
                    <label>Omschrijving</label>
                    <input name="description" class="form-control" 
                           value="{{competition.description}}" required autofocus>
                </div>   
                <button type="submit" class="btn btn-default">Aanpassen</button>
            </form>  
        </div>
    </div>
{% endblock %}
