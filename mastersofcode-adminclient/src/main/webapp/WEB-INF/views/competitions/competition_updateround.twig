{% extends "dashboard/index.twig" %}

{% block title %}
    Ronde updaten
{% endblock %}


{% block heading %}
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1>{{competition.title}}</h1>
                <h4>{{competition.description}}</h4>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-4">
            <form method="POST">    
                <h3>
                    Ronde informatie
                </h3>
                <div class="form-group">
                    <label>Duratie in seconden</label>
                    <input name="duration" class="form-control" 
                           required autofocus type="number"
                           value="{{round.duration}}">
                </div>
                <div class="form-group">
                    <label>Moeilijkheidsgraad</label>
                    <input name="multiplier" class="form-control" 
                           required autofocus type="number"
                           value="{{round.multiplier}}">
                </div>   
                <div class="form-group">
                    <label>Opdracht</label>
                    <select name="assignment"  class="form-control">
                        {%for assignment in assignments%}
                            {%if assignment.artifact == round.assignment.artifact %}
                                <option value="{{assignment.artifact}}" 
                                        selected="selected">{{assignment.name}}
                                </option>
                            {% else %}
                                <option value="{{assignment.artifact}}">{{assignment.name}}</option>
                            {% endif %}
                        {% endfor %}
                    </select>
                </div>    
                <button type="submit" class="btn btn-default">Aanpassen</button>
            </form>  
        </div>
    </div>
{% endblock %}
