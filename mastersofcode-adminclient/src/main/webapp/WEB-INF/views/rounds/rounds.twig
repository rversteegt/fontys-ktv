{% extends "dashboard/index.twig" %}

{% block title %}
    Ronden
{% endblock %}

{% block heading %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Ronden
                <a href="/mok/rounds/new" class="btn btn-default btn-header">
                    Nieuwe ronde
                </a>
            </h1>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <p class="error">            
            </p>
            {% if rounds is empty%}
                <p> Er zijn nog geen rondes </p>
            {% else %}
                <table class="table-link" style="width:80%;">
                    <thead>
                    <tr>
                        <th style="width:30%;">Wedstrijd</th>
                        <th style="width:10%;">Duratie</th>
                        <th style="width:10%;">Moeilijkheidsgraad</th>
                        <th style="width:30%;">Opdracht</th>
                        <th style="width:5%;"></th>
                        <th style="width:5%;"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for round in rounds %}
                        <tr>
                            <td><a href="/mok/rounds/{{round.id}}">{{round.competition}}</a></td>
                            <td><a href="/mok/rounds/{{round.id}}">{{round.duration}}</a></td>
                            <td><a href="/mok/rounds/{{round.id}}">{{round.multiplier}}</a></td>
                            <td><a href="/mok/rounds/{{round.id}}">{{round.assignment.name}}</a></td>
                            <td><a href="#"><span class="fa fa-edit"></a></td>
                            <td><a href="#"><span class="fa fa-minus-circle"></a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
{% endblock %}