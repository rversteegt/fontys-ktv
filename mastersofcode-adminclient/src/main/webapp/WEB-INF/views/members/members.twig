{% extends "dashboard/index.twig" %}

{% block title %}
    Deelnemers
{% endblock %}

{% block heading %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Deelnemers
                <a href="/mok/members/new" class="btn btn-default btn-header">
                    Deelnemer toevoegen
                </a>
            </h1>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            {% if members is empty%}
                <p> Er zijn nog geen deelnemers </p>
            {% else %}
                <table class="table-link" style="width:80%;">
                    <thead>
                        <tr>
                            <th style="width:30%;">Naam</th>
                            <th style="width:30%;">Email</th>
                            <th style="width:35%;">Team</th>
                            <th style="width:5%;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for member in members %}
                            <tr>
                                <td>{{member.membername}}</td>
                                <td>{{member.email}}</td>
                                <td>{{member.team}}</td>
                                <td><a href="#"><span class="fa fa-minus-circle"></a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
{% endblock %}