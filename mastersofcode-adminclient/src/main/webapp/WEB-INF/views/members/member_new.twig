{% extends "dashboard/index.twig" %}

{% block title %}
    Deelnemer
{% endblock %}


{% block heading %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Deelnemer aanmaken
            </h1>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-4">
            <form method="POST" action="/mok/members/new">    
                <h3>
                    Deelnemer informatie
                </h3>
                <div class="form-group">
                    <label>Naam</label>
                    <input name="membername" class="form-control" required autofocus>
                </div>
                <div class="form-group">
                    <label>E-mail</label>
                    <input name="email" class="form-control" required autofocus>
                </div>   
                <button type="submit" class="btn btn-default">Aanmaken</button>
            </form>  
        </div>
    </div>
{% endblock %}
