{% extends "dashboard/index.twig" %}

{% block title %}
    Opdracht
{% endblock %}


{% block heading %}
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1>{{assignment.name}}</h1>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-10">
            <table class="table">
                <tr>
                    <th>Omschrijving deelnemers</th><td>{{assignment.participantDescription}}</td>
                </tr>
                <tr>
                    <th>Omschrijving publiek</th><td>{{assignment.spectatorDescription}}</td>
                </tr>
                <tr>
                    <th>Ontwikkelaar</th><td>{{assignment.creatorName}}</td>
                </tr>
                <tr>
                    <th>Bedrijf ontwikkelaar</th><td>{{assignment.creatorOrganisation}}</td>
                </tr>
                <tr>
                    <th>Website ontwikkelaar</th><td>{{assignment.creatorLink}}</td>
                </tr>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h3>
                    Hints
                    <a href="/mok/assignments/{{assignment.artifact}}/addhint" class="btn btn-default btn-header">
                        Hint toevoegen
                    </a>
                </h3>
            </div>
            <div class="container">
                {% if assignment.hints is empty%}
                    <p> Er zijn nog geen hints </p>
                {% else %}
                    <table class="table-link" style="width:60%;">
                        <thead>
                            <tr>
                                <th style="width:75%;">Hint</th>
                                <th style="width:20%;">Tijd vrijgeven</th>
                                <th style="width:5%;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for hint in assignment.hints %}
                                <tr>
                                    <td>{{hint.text}}</td>
                                    <td>{{hint.time}}</td>
                                    <td><a href="#"><span class="fa fa-minus-circle"></a></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}
