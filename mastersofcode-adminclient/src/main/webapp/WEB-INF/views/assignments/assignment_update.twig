{% extends "dashboard/index.twig" %}

{% block title %}
    Opdrachten
{% endblock %}


{% block heading %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Opdracht wijzigen
            </h1>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-4">
            <form method="POST" action="/mok/assignments/{{assignment.artifact}}/update">
                <input name="artifact" type="hidden" value="{{assignment.artifact}}">
                <h3>
                    Opdracht informatie
                </h3>
                <div class="form-group">
                    <label>Naam</label>
                    <input name="name" class="form-control" value="{{assignment.name}}" required autofocus>
                </div>   
                <div class="form-group">
                    <label>Omschrijving deelnemers</label>
                    <input name="participantDescription" class="form-control" value="{{assignment.participantDescription}}" required autofocus>
                </div>   
                <div class="form-group">
                    <label>Omschrijving publiek</label>
                    <input name="spectatorDescription" class="form-control" value="{{assignment.spectatorDescription}}" required autofocus>
                </div>   
                <div class="form-group">
                    <label>Ontwikkelaar</label>
                    <input name="creatorName" class="form-control" value="{{assignment.creatorName}}" required autofocus>
                </div>   
                <div class="form-group">
                    <label>Bedrijf ontwikkelaar</label>
                    <input name="creatorOrganisation" class="form-control" value="{{assignment.creatorOrganisation}}" required autofocus>
                </div>   
                <div class="form-group">
                    <label>Website ontwikkelaar</label>
                    <input name="creatorLink" class="form-control" value="{{assignment.creatorLink}}"  required autofocus>
                </div>   
                <button type="submit" class="btn btn-default">Wijzigen</button>
            </form>  
        </div>
    </div>
{% endblock %}