{% extends "dashboard/index.twig" %}

{% block title %}
    Opdrachten
{% endblock %}


{% block heading %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Opdrachten
                <a href="/mok/assignments/new" class="btn btn-default btn-header">
                    Nieuwe opdracht
                </a>
            </h1>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <p class="error">            
            </p>
            {% if assignments is empty%}
                <p> Er zijn nog geen opdrachten </p>
            {% else %}
                <table class="table-link">
                    <thead>
                        <tr>
                            <th style="width:15%;">Naam</th>
                            <th style="width:40%;">Omschrijving deelnemers</th>
                            <th style="width:40%;">Omschrijving publiek</th>
                            <th style="width:5%;"></th>
                            <th style="width:5%;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for assignment in assignments %}
                            <tr>
                                <td><a href="/mok/assignments/{{assignment.artifact}}">{{assignment.name}}</a></td>
                                <td><a href="/mok/assignments/{{assignment.artifact}}">{{assignment.participantDescription}}</a></td>
                                <td><a href="/mok/assignments/{{assignment.artifact}}">{{assignment.spectatorDescription}}</a></td>
                                <td>
                                    <a href="/mok/assignments/{{assignment.artifact}}/update">
                                        <span class="fa fa-edit"></span>
                                    </a>
                                </td>
                                <td><a href="#"><span class="fa fa-minus-circle"></a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
{% endblock %}