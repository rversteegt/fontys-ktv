{% extends "dashboard/index.twig" %}

{% block title %}
    Opdrachten
{% endblock %}


{% block heading %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Nieuwe opdracht
            </h1>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-4">
            <form method="POST" action="/mok/assignments/new">    
                <h3>
                    Opdracht informatie
                </h3>
                <div class="form-group">
                    <label>Artifact</label>
                    <input name="artifact" class="form-control" required autofocus>
                </div>
                <div class="form-group">
                    <label>Naam</label>
                    <input name="name" class="form-control" required autofocus>
                </div>   
                <div class="form-group">
                    <label>Omschrijving deelnemers</label>
                    <input name="participantDescription" class="form-control" required autofocus>
                </div>   
                <div class="form-group">
                    <label>Omschrijving publiek</label>
                    <input name="spectatorDescription" class="form-control" required autofocus>
                </div>   
                <div class="form-group">
                    <label>Ontwikkelaar</label>
                    <input name="creatorName" class="form-control" required autofocus>
                </div>   
                <div class="form-group">
                    <label>Bedrijf ontwikkelaar</label>
                    <input name="creatorOrganisation" class="form-control" required autofocus>
                </div>   
                <div class="form-group">
                    <label>Website ontwikkelaar</label>
                    <input name="creatorLink" class="form-control" required autofocus>
                </div>   
                <button type="submit" class="btn btn-default">Aanmaken</button>
            </form>  
        </div>
    </div>
{% endblock %}