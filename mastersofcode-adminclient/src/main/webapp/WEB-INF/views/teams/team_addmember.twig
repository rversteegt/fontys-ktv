{% extends "dashboard/index.twig" %}

{% block title %}
    Deelnemer aan team toevoegen
{% endblock %}


{% block heading %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Deelnemer toevoegen
            </h1>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
                {% if members is empty%}
                    <p> Er zijn geen deelnemers om toe te voegen </p>                    
                {% else %}
                    <form method="POST" action="/mok/teams/{{username}}/addmember">
                        <table class="table"  style="width:50%;">
                            <thead>
                                <tr>
                                    <th style="width:10%;"></th>
                                    <th style="width:40%;">Naam</th>
                                    <th style="width:50%;">Email</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for member in members %}
                                    <tr>
                                        <td><input type="radio" name="member" value="{{member.id}}"></td>
                                        <td>{{member.membername}}</td>
                                        <td>{{member.email}}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                        <button type="submit" class="btn btn-default">Toevoegen</button>
                    </form>
                {% endif %}
        </div>
    </div>
{% endblock %}
